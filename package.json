{
  "name": "deploify",
  "displayName": "Deploify",
  "description": "Unified deployment status in VS Code for Vercel, Netlify, and more.",
  "version": "0.1.0",
  "publisher": "r69",
  "license": "MIT",
  "engines": {
    "vscode": "^1.90.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onView:deployify.deployments",
    "onCommand:deployify.refresh",
    "onCommand:deployify.connectProvider",
    "onCommand:deployify.connectVercel",
    "onCommand:deployify.connectNetlify",
    "onCommand:deployify.connectAwsAmplify",
    "onCommand:deployify.disconnectProvider",
    "onCommand:deployify.openDeployment",
    "onCommand:deployify.openProject",
    "onCommand:deployify.viewDetails",
    "onCommand:deployify.linkWorkspaceProject",
    "onCommand:deployify.unlinkWorkspaceProject"
  ],
  "main": "./out/src/extension.js",
  "contributes": {
    "viewsContainers": {
      "activitybar": [
        {
          "id": "deployify",
          "title": "Deployments",
          "icon": "media/rocket.svg"
        }
      ]
    },
    "views": {
      "deployify": [
        {
          "id": "deployify.deployments",
          "name": "Deployments"
        }
      ]
    },
    "viewsWelcome": [
      {
        "view": "deployify.deployments",
        "contents": "Welcome to Deployify.\nTrack live deployments without leaving VS Code.\n\n[Connect Vercel](command:deployify.connectVercel)\n[Connect Netlify](command:deployify.connectNetlify)\n[Connect AWS Amplify](command:deployify.connectAwsAmplify)\n[Connect Provider](command:deployify.connectProvider)",
        "when": "!deployify.hasConnectedProvider"
      },
      {
        "view": "deployify.deployments",
        "contents": "You're connected, but no projects were loaded yet.\n\n[Refresh](command:deployify.refresh)",
        "when": "deployify.hasConnectedProvider && !deployify.hasAnyProjects"
      },
      {
        "view": "deployify.deployments",
        "contents": "No workspace-linked projects yet.\n\n[Link Workspace Project](command:deployify.linkWorkspaceProject)",
        "when": "deployify.hasAnyProjects && !deployify.hasWorkspaceProjects"
      }
    ],
    "commands": [
      {
        "command": "deployify.connectProvider",
        "title": "Connect Provider",
        "category": "Deployify",
        "shortTitle": "Connect"
      },
      {
        "command": "deployify.connectVercel",
        "title": "Connect Vercel",
        "category": "Deployify"
      },
      {
        "command": "deployify.connectNetlify",
        "title": "Connect Netlify",
        "category": "Deployify"
      },
      {
        "command": "deployify.connectAwsAmplify",
        "title": "Connect AWS Amplify",
        "category": "Deployify"
      },
      {
        "command": "deployify.disconnectProvider",
        "title": "Disconnect Provider",
        "category": "Deployify"
      },
      {
        "command": "deployify.refresh",
        "title": "Refresh",
        "category": "Deployify",
        "shortTitle": "Refresh",
        "icon": {
          "light": "media/refresh.svg",
          "dark": "media/refresh.svg"
        }
      },
      {
        "command": "deployify.openDeployment",
        "title": "Open Deployment",
        "category": "Deployify"
      },
      {
        "command": "deployify.openProject",
        "title": "Open Project Dashboard",
        "category": "Deployify"
      },
      {
        "command": "deployify.viewDetails",
        "title": "View Details",
        "category": "Deployify"
      },
      {
        "command": "deployify.linkWorkspaceProject",
        "title": "Link Workspace Project",
        "category": "Deployify"
      },
      {
        "command": "deployify.unlinkWorkspaceProject",
        "title": "Unlink Workspace Project",
        "category": "Deployify"
      }
    ],
    "menus": {
      "view/title": [
        {
          "command": "deployify.refresh",
          "when": "view == deployify.deployments",
          "group": "navigation@1"
        }
      ],
      "view/item/context": [
        {
          "command": "deployify.openDeployment",
          "when": "view == deployify.deployments && viewItem == deployify.deployment",
          "group": "inline@1"
        },
        {
          "command": "deployify.viewDetails",
          "when": "view == deployify.deployments && viewItem == deployify.deployment",
          "group": "inline@2"
        },
        {
          "command": "deployify.openProject",
          "when": "view == deployify.deployments && viewItem == deployify.project",
          "group": "inline@1"
        },
        {
          "command": "deployify.connectProvider",
          "when": "view == deployify.deployments && viewItem == deployify.provider.disconnected",
          "group": "inline@1"
        },
        {
          "command": "deployify.disconnectProvider",
          "when": "view == deployify.deployments && viewItem == deployify.provider.connected",
          "group": "inline@1"
        },
        {
          "command": "deployify.linkWorkspaceProject",
          "when": "view == deployify.deployments",
          "group": "navigation@10"
        },
        {
          "command": "deployify.unlinkWorkspaceProject",
          "when": "view == deployify.deployments",
          "group": "navigation@11"
        }
      ]
    },
    "configuration": {
      "title": "Deployify",
      "properties": {
        "deployify.pollIntervalSeconds": {
          "type": "number",
          "default": 45,
          "minimum": 20,
          "description": "Refresh interval in seconds for deployment polling."
        },
        "deployify.notifyOnFailure": {
          "type": "boolean",
          "default": true,
          "description": "Show VS Code notifications when deployments transition to failed."
        },
        "deployify.providers.vercel.enabled": {
          "type": "boolean",
          "default": true,
          "description": "Enable Vercel provider integration."
        },
        "deployify.providers.netlify.enabled": {
          "type": "boolean",
          "default": true,
          "description": "Enable Netlify provider integration."
        },
        "deployify.providers.awsAmplify.enabled": {
          "type": "boolean",
          "default": true,
          "description": "Enable AWS Amplify provider integration."
        },
        "deployify.providers.awsAmplify.region": {
          "type": "string",
          "default": "us-east-1",
          "description": "AWS region for Amplify API requests."
        },
        "deployify.providers.awsAmplify.profile": {
          "type": "string",
          "default": "",
          "description": "Optional AWS shared credentials profile name to use for Amplify."
        }
      }
    }
  },
  "scripts": {
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "test": "npm run compile && node --test out/test/**/*.test.js",
    "package": "vsce package"
  },
  "dependencies": {
    "@aws-sdk/client-amplify": "^3.848.0",
    "@aws-sdk/credential-providers": "^3.848.0"
  },
  "devDependencies": {
    "@types/node": "^22.10.2",
    "@types/vscode": "^1.90.0",
    "@vscode/vsce": "^2.24.0",
    "typescript": "^5.7.2"
  }
}
